<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:elevation="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitop_bold"
            android:gravity="center"
            android:text="Thank you That's so generous"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_lite"
            android:gravity="center"
            android:text="You have opted to donat blood"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_lite"
            android:gravity="center"
            android:text="Please Confirm below your nobel cause"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/nunitop_bold"
            android:text="Confirm"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</LinearLayout>